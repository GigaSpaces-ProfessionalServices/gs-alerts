<alerts>
    <alert
            class="org.openspaces.admin.alert.config.CpuUtilizationAlertConfiguration"
            enabled="true">
        <property key="high-threshold-perc" value="80" />
        <property key="low-threshold-perc" value="60" />
        <property key="measurement-period-milliseconds" value="60000" />
    </alert>

    <alert
            class="org.openspaces.admin.alert.config.PhysicalMemoryUtilizationAlertConfiguration"
            enabled="true">
        <property key="high-threshold-perc" value="94" />
        <property key="low-threshold-perc" value="88" />
        <property key="measurement-period-milliseconds" value="60000" />
    </alert>

    <alert
            class="org.openspaces.admin.alert.config.HeapMemoryUtilizationAlertConfiguration"
            enabled="true">
        <property key="high-threshold-perc" value="65" />
        <property key="low-threshold-perc" value="50" />
        <property key="measurement-period-milliseconds" value="60000" />
    </alert>

    <alert
            class="org.openspaces.admin.alert.config.GarbageCollectionAlertConfiguration"
            enabled="true">
        <property key="long-gc-pause-period-milliseconds" value="20000" />
        <property key="short-gc-pause-period-milliseconds" value="10000" />
    </alert>

    <alert
            class="org.openspaces.admin.alert.config.ReplicationChannelDisconnectedAlertConfiguration"
            enabled="true">
    </alert>

    <alert
            class="org.openspaces.admin.alert.config.ReplicationRedoLogOverflowToDiskAlertConfiguration"
            enabled="true">
    </alert>

    <alert
            class="org.openspaces.admin.alert.config.ReplicationRedoLogSizeAlertConfiguration"
            enabled="true">
        <property key="high-threshold-redo-log-size" value="1000000" />
        <property key="low-threshold-redo-log-size" value="500000" />
    </alert>

    <alert
            class="org.openspaces.admin.alert.config.MirrorPersistenceFailureAlertConfiguration"
            enabled="true">
    </alert>

    <alert
            class="org.openspaces.admin.alert.config.ProvisionFailureAlertConfiguration"
            enabled="false">
    </alert>

    <alert
            class="org.openspaces.admin.alert.config.ProcessingUnitInstanceMemberAliveIndicatorAlertConfiguration"
            enabled="true">
    </alert>

    <alert
            class="org.openspaces.admin.alert.config.ElasticMachineProvisioningAlertConfiguration"
            enabled="false">
    </alert>

    <alert
            class="org.openspaces.admin.alert.config.ElasticGridServiceAgentProvisioningAlertConfiguration"
            enabled="false">
    </alert>

    <alert
            class="org.openspaces.admin.alert.config.ElasticGridServiceContainerProvisioningAlertConfiguration"
            enabled="false">
    </alert>

    <alert
            class="org.openspaces.admin.alert.config.ElasticAutoScalingAlertConfiguration"
            enabled="false">
    </alert>

</alerts>

